{
  "name": "shepherd-v.com",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "default": "index.html",
  "scripts": {
    "clean": "rimraf dist/ .parcel-cache/",
    "start": "parcel src/index.html",
    "build": "npm run clean && parcel build --public-url . src/index.html --no-source-maps",
    "deploy-share": "npm run clean && parcel build --public-url . src/index.html --no-source-maps && arx upload-dir dist -w ./wallet.json --index-file index.html -t arweave -h https://turbo.ardrive.io",
    "test": "mocha"
  },
  "dependencies": {
    "arweave": "^1.11.6",
    "grommet": "^2.27.0",
    "grommet-icons": "^4.8.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.6",
    "buffer": "^6.0.3",
    "chai": "latest",
    "mocha": "latest",
    "parcel": "latest",
    "process": "^0.11.10",
    "querystring-es3": "^0.2.1",
    "rimraf": "^6.0.1",
    "svgo": "^3.3.2",
    "typescript": "latest"
  }
}
